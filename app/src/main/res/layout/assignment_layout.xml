<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assignment_name"
        android:text="Name Here"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assignment_description"
        android:layout_below="@id/assignment_name"
        android:text="Description Here"
        android:layout_marginBottom="10dp"/>
    <android.support.v7.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assignment_check"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assignment_course"
        android:layout_below="@id/assignment_description"
        android:layout_marginBottom="4dp"
        android:text="Course Name Here"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assignment_score"
        android:text="Score"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/assignment_check"
        android:layout_marginRight="16dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/assignment_course"
        android:background="@android:color/black"
        android:layout_marginBottom="4dp"/>

</RelativeLayout>