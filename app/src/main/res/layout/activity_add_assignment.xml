<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_assignment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="xyz.fmsoft.collegepa.AddAssignmentActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_assignment_name"
        android:hint="Assignment Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_assignment_name"
        android:id="@+id/add_assignment_description"
        android:hint="Description
        "/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/add_assignment_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/add_assignment_description"
        android:layout_margin="10dp"
        android:spinnerMode="dropdown" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_assignment_totalPoints"
        android:layout_below="@id/add_assignment_spinner"
        android:layout_marginBottom="10dp"
        android:inputType="number"
        android:hint="Points Worth"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:background="@color/darkgreen"
        android:id="@+id/add_assignment_date"
        android:layout_below="@id/add_assignment_totalPoints"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Due Date"/>


    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:background="@color/darkgreen"
        android:id="@+id/add_assignment_time"
        android:layout_alignBottom="@id/add_assignment_date"
        android:layout_toEndOf="@id/add_assignment_date"
        android:layout_marginEnd="10dp"
        android:text="Due Time"/>






</RelativeLayout>
