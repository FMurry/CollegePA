<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="collegessentials.fwm.collegepa.CourseFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_no_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Press + to add some Courses"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/nc_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/tv_no_courses"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/ic_book_open_grey600_48dp" />

</android.support.v4.widget.SwipeRefreshLayout>