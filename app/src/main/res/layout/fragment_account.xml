<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="collegessentials.fwm.collegepa.AccountFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/account_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp"
            android:text="Hello"
            android:textSize="24dip" />

        <ImageView
            android:id="@+id/account_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/account_welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_account_black_48dp" />



        <ImageView
            android:id="@+id/account_canvas"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_canvas"
            android:layout_alignTop="@+id/account_log_out"
            android:layout_alignEnd="@+id/warning_account" />

        <TextView
            android:id="@+id/account_log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp"
            android:onClick="OnClick"
            android:text="Log Out"
            android:textColor="#fff"
            android:textSize="30dip" />

        <TextView
            android:id="@+id/account_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_pic"
            android:layout_centerHorizontal="true"
            android:text="email" />

        <TextView
            android:id="@+id/warning_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/account_log_out"
            android:layout_margin="15dp"
            android:gravity="center_horizontal"
            android:text="@string/warning_account"
            android:textColor="@color/colorPrimary" />


    </RelativeLayout>
</FrameLayout>